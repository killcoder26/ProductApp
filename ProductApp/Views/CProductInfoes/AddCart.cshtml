@model ProductApp.Models.CCartInfo

<div class="head_text">
    <h1>Add to Cart </h1>
</div>
<hr />
<dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.productName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.productName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.productQty)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.productQty)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.productPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.productPrice)
        </dd>
    </dl>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <input asp-for="productName" type="hidden" class="form-control" />
                
                
                <input asp-for="productQty" type="hidden" class="form-control" />
                
                <input asp-for="productPrice" type="hidden" class="form-control" />
                
            <div class="form-group">
                <input type="submit" value="Add to Cart" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
